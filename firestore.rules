rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Business Profiles: Users can only read/write their own profile
    match /businessProfiles/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // User Analytics: Authenticated users can create events
    match /user_analytics/{analyticsId} {
      allow create: if request.auth != null;
    }

    // Users Collection: Users can only read their own data
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
    }

    // Power-Ups: Users can manage their own power-ups
    match /users/{userId}/powerUps/{powerUpId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Website Integrations: Users can manage their own integrations
    match /websiteIntegrations/{integrationId} {
      allow read, create: if request.auth.uid == request.resource.data.userId;
    }

    // Platform Stats: Allow all authenticated users to read
    match /platform_stats/{statId} {
      allow read: if request.auth != null;
    }
  }
}
