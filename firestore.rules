rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Business Profiles: Users can only read/write their own profile
    match /businessProfiles/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Deployment Requests: Users can manage their own requests
    match /deploymentRequests/{requestId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Deployed Employees: Users can manage their own employees
    match /deployedEmployees/{employeeId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // User Analytics: Only admins can read/write analytics
    match /user_analytics/{analyticsId} {
      allow read, write: if isAdmin();
    }

    // Users Collection: Users can read their own data, admins can read any
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
    }

    // Power-Ups: Users can manage their own power-ups
    match /users/{userId}/powerUps/{powerUpId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Website Integrations: Users can manage their own integrations
    match /websiteIntegrations/{integrationId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update: if request.auth.uid == resource.data.userId;
    }

    // Platform Stats: Only admins can read
    match /platform_stats/{statId} {
      allow read: if isAdmin();
    }
  }
}
