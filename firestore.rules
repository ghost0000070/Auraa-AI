rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }

    // User-specific data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // AI Employee Deployment Requests
    match /aiEmployeeDeploymentRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth.uid == resource.data.user_id;
    }

    // AI Helper Templates (readable by all authenticated users)
    match /ai_helper_templates/{templateId} {
      allow read: if request.auth != null;
    }

    // AI Team Communications
    match /ai_team_communications/{communicationId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (request.auth.uid == resource.data.user_id || request.auth.uid == resource.data.recipient_id);
      allow update: if request.auth.uid == resource.data.user_id; // Only sender can update
    }

    // Stripe Customers (only accessible by backend functions)
    match /stripe_customers/{userId} {
      allow read, write: if false; // Only allow access via Firebase Functions
    }

    // User Roles (only owner can read)
    match /user_roles/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false; // Only allow access via Firebase Functions
    }

    // Subscribers (only accessible by backend functions)
    match /subscribers/{userId} {
      allow read, write: if false; // Only allow access via Firebase Functions
    }

    // Agent Tasks
    match /AgentTask/{taskId} {
      allow read, write: if request.auth != null; // Assuming agent tasks are tied to authenticated users
    }

    // Agent Actions
    match /AgentAction/{actionId} {
      allow read, write: if request.auth != null; // Assuming agent actions are tied to authenticated users
    }
  }
}
