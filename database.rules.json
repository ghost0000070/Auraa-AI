{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "aiEmployees": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      },
      ".read": "auth.token.admin == true",
      ".write": "auth.token.admin == true"
    },
    "aiEmployeeDeploymentRequests": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      },
      ".read": "auth.token.admin == true",
      ".write": "auth.token.admin == true"
    },
    "stripe_customers": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "user_roles": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth.token.admin == true"
      }
    }
  }
}